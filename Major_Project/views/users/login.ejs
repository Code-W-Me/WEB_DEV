<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <h3>Login</h3>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="enter username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required>
                <div class="valid-feedback">Password looks good!</div>
            </div>
            <button class="btn btn-dark add-btn mb-3">Login</button>
            <p>Don't have an account? <a href="/signup">Sign Up</a></p>
            <br>
            <p>Go to <a href="/">Home</a></p>
        </form>
    </div>
</div>
